<% provide(:title, 'Create a tracker') %>
<h2>Create a tracker for <%= @game.metagame.name %></h2>

<div class="row">
  <div class="span6">
    <%= form_for [@game, @tracker] do |f| %>
      <%= render 'fields', f: f %>
      <div><%= f.hidden_field :game_id, value: params[:game_id] %></div>
      <div><%= f.hidden_field :base_playtime, value: @game.playtime %></div>
      <%= f.submit "Create my tracker", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
